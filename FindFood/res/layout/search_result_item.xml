<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/card_rect_bg"
    android:gravity="center_vertical"
    android:padding="5dp" >
    <ImageView 
        android:id="@+id/food_pic"
        android:layout_width="@dimen/search_result_pic_width"
        android:layout_height="@dimen/search_result_pic_height"
        android:scaleType="centerCrop"
        android:src="@drawable/search_food_pic"/>
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp">
        <TextView 
            android:id="@+id/foodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="梅菜扣肉饭"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">
            <RatingBar 
	            android:id="@+id/rating_bar"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            style="@style/sty_custom_ratingbar"
	            android:progress="30"
              />
            <TextView 
	            android:id="@+id/avg_score"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="3.2"
	            android:textColor="@color/orange"
	            android:textSize="10sp"
	            android:layout_marginLeft="3dp"
            />
             <TextView 
	            android:id="@+id/num_to_evaluate"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="21人评价"
	            android:textAppearance="@style/sty_middle_gray_text"
	            android:textSize="10sp"
	            android:layout_marginLeft="3dp"
            />
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
             <ImageView 
             android:id="@+id/food_house_icon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/icon_house"
             />
         <TextView 
             android:id="@+id/food_house_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="潮汕经典"
             android:textSize="8sp"
             android:textAppearance="@style/sty_middle_gray_text"
             android:layout_toRightOf="@id/food_house_icon"
             android:layout_alignBottom="@id/food_house_icon"
             android:layout_marginLeft="2dp"
             />
        </RelativeLayout>
        
    </LinearLayout>
    
    <View 
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/trendcard_gray_line"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"/>
    
    <RelativeLayout 
        android:id="@+id/menu_btn"
        android:layout_width="60dp"
        android:layout_height="match_parent">
        <TextView 
            android:id="@+id/food_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="9元"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/triangle_gray"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
