<?xml version="1.0" encoding="utf-8"?>
<!-- 通知中心评论卡片 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/card_comment_bg"
     >
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_marginTop="10dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         >
         <!-- 头像  -->
         <ImageView 
             android:id="@+id/iv_user_icon"
             android:layout_width="@dimen/user_icon_width_min"
             android:layout_height="@dimen/user_icon_height_min"
             android:background="@drawable/head_icon_rabit"
             />
         <LinearLayout 
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:orientation="vertical"
             >
             <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 >
                 <TextView 
                     android:id="@+id/tv_username"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="何颖意"
                     android:layout_marginLeft="5dp"
                     android:textAppearance="@style/sty_middle_gray_text"
                     />
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="评论了你对"
                     android:layout_marginLeft="5dp"
                     android:textAppearance="@style/sty_light_gray_text"
                     />
                 <TextView 
                     android:id="@+id/tv_foodname"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="鱼香茄子饭"
                     android:layout_marginLeft="5dp"
                      android:textAppearance="@style/sty_light_brown_text"
                     />
                  <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="的点评:"
                     android:layout_marginLeft="5dp"
                     android:textAppearance="@style/sty_light_gray_text"
                     
                     />
             </LinearLayout>
             <TextView 
                 android:id="@+id/tv_comment_content"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="你说的真不错，我当时第一次吃的时候也是如此感觉。那香味真的让人印象深刻，送饭真的很..."
                 android:ellipsize="end"
                 android:layout_marginLeft="5dp"
                 android:layout_marginTop="2dp"
                 android:textAppearance="@style/sty_dark_gray_text"
                 />
         </LinearLayout>
     </LinearLayout>
     <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="25dp"
             android:layout_alignParentBottom="true"
             android:gravity="center_vertical"
             >
         <TextView 
             android:id="@+id/tv_comment_date"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="2013-3-15"
             android:textSize="12sp"
             android:layout_marginLeft="10dp"
             android:textAppearance="@style/sty_light_gray_text"
             />
         
         <TextView 
             android:id="@+id/tv_comment_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="14:16"
             android:textSize="12sp"
             android:layout_marginRight="10dp"
             android:layout_alignParentRight="true"
             android:textAppearance="@style/sty_light_gray_text"
             />
     </RelativeLayout>
</RelativeLayout>
