<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 浅灰色字体样式 -->
    <style name="sty_light_gray_text">
        <item name="android:textColor">#c2c2c2</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <!-- 中度灰色字体样式 -->
    <style name="sty_middle_gray_text">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">13sp</item>
    </style>
    
       <!-- 中度灰色字体样式 -->
    <style name="sty_dark_gray_text">
        <item name="android:textColor">#4f4f4f</item>
        <item name="android:textSize">14sp</item>
    </style>
    
       <!-- 浅棕色字体样式 -->
    <style name="sty_light_brown_text">
        <item name="android:textColor">#cb8831</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <!-- 橙色字体样式 -->
    <style name="sty_orange_text">
        <item name="android:textColor">#ff8d31</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="sty_custom_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_progress</item>
        <item name="android:minHeight">@dimen/star_width_height</item>
        <item name="android:maxHeight">@dimen/star_width_height</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">4</item>
        <item name="android:max">100</item>
    </style>
    
    
      <style name="MyDialog" parent="@android:Theme.Dialog">
       <item name="android:windowFrame">@null</item>
       <item name="android:windowNoTitle">true</item>
       <item name="android:windowBackground">@drawable/transparent_background</item>
       <item name="android:windowIsFloating">true</item> 
	   <item name="android:windowContentOverlay">@null</item>    
	</style>

</resources>
